{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "types": [
      "jest",
      "node",
      "reflect-metadata"
    ],
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}
