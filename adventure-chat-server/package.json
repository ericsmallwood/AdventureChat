{
  "name": "adventure-chat-server",
  "version": "1.0.0",
  "description": "My Moleculer microservices project",
  "pre-commit": [
    "lint"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --config moleculer.config.ts services/**/*.service.ts",
    "cli": "moleculer connect NATS",
    "start": "moleculer-runner services",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint services/**/*.ts --fix"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/jest": "^23.1.1",
    "@types/node": "^10.12.12",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "moleculer-repl": "^0.5.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@types/mysql": "^2.15.14",
    "@types/uuid": "^8.0.0",
    "crypto-ts": "^1.0.2",
    "global": "^4.4.0",
    "inversify": "^5.0.1",
    "ioredis": "^4.2.0",
    "moleculer": "^0.13.0",
    "moleculer-web": "^0.8.0",
    "moment": "^2.27.0",
    "mysql": "^2.18.1",
    "nats": "^1.0.1",
    "nodemailer": "^6.4.10",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.3.0",
    "uuid": "^8.2.0"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
